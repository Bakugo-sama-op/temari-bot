

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $temari_REPO == "temariBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0Jha3Vnby1zYW1hLW9wL3RlbWFyaS1ib3QvYXJjaGl2ZS9tYXN0ZXIuemlw" | base64 -d
    elif [[ $temari_REPO == "temariBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZS1MZWdlbmRCb3QvTEVHRU5EVVNFUkJPVC9hcmNoaXZlL0xlZ2VuZEJvdC56aXA=" | base64 -d
    elif [[ $temari_REPO =~ $regex ]]
    then
        if [[ $temari_REPO_BRANCH ]]
        then
            echo "${temari_REPO}/archive/${temari_REPO_BRANCH}.zip"
        else
            echo "${temari_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZS1MZWdlbmRCb3QvTEVHRU5EVVNFUkJPVC9hcmNoaXZlL0xlZ2VuZEJvdC56aXA=" | base64 -d
    fi
}


_setting_bot () {
    local zippath
    zippath="temariBot.zip"
    echo "  Downloading temari bot source code....ğŸ’Œ"
    wget -q $(_get_repolink) -O "$zippath"
    echo "  kaam shuru ho rha ğŸ¤£hai ..."
    temariPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  safaii ho rahi hai.."
    rm -rf "$zippath"
    sleep 5
    cd $temariPATH
    echo "    ğŸ’ŒStarting ğ–™ğ–Šğ–’ğ–†ğ–—ğ– ğ–‡ğ–”ğ–™ğŸ’Œ     "
    echo "
    ğŸ’ğŸ’ğŸ’ğŸ’ğŸ’ğŸ’ğŸ’
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_setting_bot
